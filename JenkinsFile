pipeline {
    agent any
    
    stages {
        stage('build'){
            steps{
                bat "mvn clean compile"
            }
            post{
            	always {
            		echo "build staged finished!"
            	}
            	changed {
            		echo "Du changement en build"
            	}
            	failure {
            		echo "Pas bon le build"
            	}
            	success {
            		echo "1 gommette pour le build"
            	}
        	}
        }
        stage('test'){
        	steps{
        	  	bat "mvn test"
        	}
    	}
    	stage('package'){
        	steps{
        	  	bat "mvn -DskipTests package"
        	} 
        }
    	stage('deliver'){
        	steps{
        	  	bat "deliver.bat"
        	}
    }
    }
   			post{
            	always {
            		echo "pipeline finished!"
            	}
            	changed {
            		echo "Du changement en pipeline"
            	}
            	failure {
            		echo "Pas bon le pipeline"s
            	}
            	success {
            		echo "1 super gommette pour le pipeline"
            	}
        	}
      
}